# ============================================
# TELEGRAM CONFIGURATION
# ============================================
# Get these from your Telegram channels/groups and bot
TELEGRAM_MAIN_CHANNEL_ID=           # Channel ID where jobs are posted (e.g., -1001234567890)
TELEGRAM_MAIN_GROUP_ID=             # Group ID for submitting results (e.g., -1001234567890)  
TELEGRAM_BOT_TOKEN=                 # Your bot token from @BotFather
TELEGRAM_NOTIFICATION_GROUP_ID=     # Group ID for notifications (e.g., -1002690141269)
TELEGRAM_USER_ID=                   # Your personal Telegram user ID (numeric)

# ============================================
# PERSONAL TELEGRAM AUTHENTICATION
# ============================================
# Get these from https://my.telegram.org/apps
TELEGRAM_API_ID=                    # Your Telegram API ID
TELEGRAM_API_HASH=                  # Your Telegram API Hash

# ============================================
# AI CONFIGURATION (GROQ)
# ============================================
# Get your API key from https://console.groq.com/keys
AI_API_KEY=                         # Your Groq API key
AI_MODEL=llama-3.1-8b-instant      # AI model to use for validation and comments

# ============================================
# TWITTER API CONFIGURATION
# ============================================
# Get these from https://developer.twitter.com/en/portal/dashboard
# Main account: Used for both reading tweets and posting comments
TWITTER_CONSUMER_KEY=               # Twitter API Consumer Key
TWITTER_CONSUMER_SECRET=            # Twitter API Consumer Secret
TWITTER_ACCESS_TOKEN=               # Twitter API Access Token
TWITTER_ACCESS_TOKEN_SECRET=        # Twitter API Access Token Secret
TWITTER_CLIENT_ID=                  # Twitter API Client ID
TWITTER_CLIENT_SECRET=              # Twitter API Client Secret
TWITTER_BEARER_TOKEN=               # Twitter API Bearer Token

